{
    "manifest_version": 2,
    "name": "Ignorance Is Bliss",
    "version": "1.0",
    "description": "Scans and replaces text on web pages.",
    "permissions": ["activeTab", "storage"],
    "background": {
      "scripts": ["content.js"],
      "persistent": false
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  